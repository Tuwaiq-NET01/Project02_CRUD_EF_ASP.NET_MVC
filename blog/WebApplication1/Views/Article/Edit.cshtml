@model ArticleModel
@{ 
    var article = (ArticleModel)ViewData["article"];
}
<h1>Edit</h1>
@article.Title
<div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" type="text" />
        <br />
        <label asp-for="HTMLContent">Content:</label>
        <textarea asp-for="HTMLContent" class="border border-b lack" rows="10" cols="50"></textarea>
        <br />
        <input type="submit" value="Edit post" />
    </form>
</div>