@model Logistic.Models.Customer

@{
    ViewData["Title"] = "Delete";
    var customer = (Customer)ViewData["customer"];
}

<h1 class="text-info">Delete</h1>

<h3 class="text-info">Are you sure you want to delete this Shipment?</h3>
<hr />
@if (customer != null)
{
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.Address</td>

            </tr>
        </tbody>
    </table>
}
else
{
    <h1>Data not found</h1>
}

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger form-control" />
    <br />
    <br />
    <a class="btn btn-success form-control" asp-action="Index">Back to List</a>
</form>

