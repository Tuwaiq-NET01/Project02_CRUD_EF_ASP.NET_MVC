@{
    ViewData["Title"] = "Details";
    var customer = (Customer)ViewData["customer"];


}

<h1 class="text-info">Customer Detail</h1>

@if (customer != null)
{
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.Address</td>


            </tr>
        </tbody>
    </table>
}
else
{
    <h1>Data not found</h1>
}
<div>
    <a class="btn btn-primary form-control" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
    <br />
    <br />
    <a class="btn btn-success form-control" asp-action="Index">Back to List</a>
</div>
