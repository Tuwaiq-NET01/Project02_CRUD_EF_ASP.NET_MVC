@{
    ViewData["Title"] = "Details";
    var product = (Product)ViewData["product"];


}

<h1 class="text-info">Product Detail</h1>

@if (product != null)
{
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>

            </tr>
        </tbody>
    </table>
}
else
{
    <h1>Data not found</h1>
}
<div>
    <a class="btn btn-primary form-control" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
    <br />
    <br />
    <a class="btn btn-success form-control" asp-action="Index">Back to List</a>
</div>
