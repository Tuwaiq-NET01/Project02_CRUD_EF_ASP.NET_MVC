@model Logistic.Models.Product

@{
    ViewData["Title"] = "Edit";
    var product = (Product)ViewData["product"];

}

<h1 class="text-info">Edit Product</h1>
<hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label text-info"></label>
                <input asp-for="Name" value=@product.Name class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label text-info"></label>
                <input asp-for="Description" value=@product.Description class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label text-info"></label>
                <input asp-for="Price" value=@product.Price class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary form-control" />
            </div>
        </form>

        <div>
            <a class="btn btn-success form-control" asp-action="Index">Back to List</a>
        </div>
