@model Logistic.Models.Shipment

@{
    ViewData["Title"] = "Delete";
    var shipment = (Shipment)ViewData["shipment"];
}

<h1 class="text-info">Delete</h1>

<h3 class="text-info">Are you sure you want to delete this Shipment?</h3>
<hr />
@if (shipment != null)
{
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>DateOfDelivery</th>
                <th>LocationOfDelivery</th>
                <th>CustomerId</th>
                <th>ProductId</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@shipment.DateOfDelivery</td>
                <td>@shipment.LocationOfDelivery</td>
                <td>@shipment.CustomerId</td>
                <td>@shipment.ProductId</td>

            </tr>
        </tbody>
    </table>
}
else
{
    <h1>Data not found</h1>
}

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger form-control" />
    <br />
    <br />
    <a class="btn btn-success form-control" asp-action="Index">Back to List</a>
</form>

