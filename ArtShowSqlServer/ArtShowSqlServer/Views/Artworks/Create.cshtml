@model ArtWorksModel

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label style="font-size:25px" asp-for="Id"><b>Id</b></label>
        <div>
            <input  style="text-align:center" class="form-control" asp-for="Id" />
        </div>
    </div>

    <div class="form-group">
        <label style="font-size:25px" asp-for="Title"><b>Title</b></label>
        <div>
            <input style="text-align:center" class="form-control" asp-for="Title" />
        </div>
    </div>

    <div class="form-group">
        <label style="font-size:25px" asp-for="Image"><b>Image</b> </label>
        <div>
            <input style="text-align:center" class="form-control" asp-for="Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label style="font-size:25px" asp-for="Price"><b>Price</b></label>
        <div>
            <input style="text-align:center" class="form-control" asp-for="Price" />
        </div>
    </div>
    <div class="form-group">
        <label style="font-size:25px" asp-for="ArtsitId"><b>Artsit Id</b></label>
        <div>
            <input style="text-align:center" class="form-control" asp-for="ArtsitId" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-info" value="Submit" />
    </div>
</form>