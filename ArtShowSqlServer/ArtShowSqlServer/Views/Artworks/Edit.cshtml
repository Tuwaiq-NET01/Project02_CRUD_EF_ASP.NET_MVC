@model ArtWorksModel
@{
    var ArtWork = (ArtWorksModel)ViewData["artWork"];

}
<form asp-action="Edit" method="post" class="form-horizontal">
        <div class="form-group">
            <label style="font-size:25px" asp-for="Id"><b>Id</b></label>
            <div>
                <input type="text" class="form-control" style="text-align:center" placeholder="@ArtWork.Id" readonly asp-for="Id" />
            </div>
        </div>

        <div class="form-group">
            <label style="font-size:25px" asp-for="Title"><b>Title</b></label>
            <div>
                <input asp-for="Title" class="form-control" style="text-align:center" value="@ArtWork.Title" />
            </div>
        </div>

        <div class="form-group">
            <label style="font-size:25px" asp-for="Image"><b>Image URL </b></label>
            <div>
                <input asp-for="Image" style="text-align:center" class="form-control" value="@ArtWork.Image" />
            </div>
        </div>

        <div class="form-group">
            <label style="font-size:25px" asp-for="Price"><b>Price</b></label>
            <div>
                <input asp-for="Price" style="text-align:center" class="form-control" value="@ArtWork.Price" />
            </div>
        </div>
        <div class="form-group">
            <label style="font-size:25px" asp-for="ArtsitId">Artsit Id</label>
            <div>
                <input asp-for="ArtsitId" style="text-align:center" class="form-control" value="@ArtWork.ArtsitId" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-info" value="Update" />
        </div>
</form>

