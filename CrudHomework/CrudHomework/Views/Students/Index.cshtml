@{ 
    var records = (List<Student>)ViewData["Records"];
}

<a asp-controller="Students" asp-action="Create" class="btn btn-primary">Add New</a>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Actions</td>
    </tr>
    @foreach(var row in records)
            {
<tr>
    <td>@row.Id</td>
    <td>@row.Name</td>
    <td>
        <a class="btn btn-warning" asp-controller="Students" asp-action="Edit" asp-route-id="@row.Id">Edit</a>
        <a class="btn btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="@row.Id">Delete</a>
    </td>
</tr>
            }
</table>